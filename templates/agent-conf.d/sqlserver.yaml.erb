init_config:

instances:
    -   host: <%= @sqlhostandport %>
<% if @username -%>
        username: <%= @username %>
<% end -%>
<% if @password -%>
        password: <%= @password %>
<% end -%>
<% if @tags and ! @tags.empty? -%>
        tags:
  <%- Array(@tags).each do |tag| -%>
    <%- if tag != '' -%>
            - <%= tag %>
    <%- end -%>
  <%- end -%>
<% end -%>
